---
/**
 * Discovery Wizard - Dynamic Route
 *
 * Handles all /discover/* routes, rendering content from the node tree.
 * External nodes redirect to their destinations.
 */
import Layout from '../../layouts/Layout.astro';
import { nodes, externalLinks, isExternalNode, getAllNodeIds } from '../../data/discover-nodes';

// Generate static paths for all nodes
export function getStaticPaths() {
  const allNodes = getAllNodeIds();

  return allNodes.map((nodeId) => ({
    params: { slug: nodeId === 'home' ? undefined : nodeId },
    props: { nodeId }
  }));
}

interface Props {
  nodeId: string;
}

const { nodeId } = Astro.props;
const slug = Astro.params.slug;

// Determine the actual node ID
const actualNodeId = slug || 'home';
const node = nodes[actualNodeId];

// Handle missing nodes
if (!node) {
  return Astro.redirect('/discover');
}

// Handle external redirects
if (isExternalNode(actualNodeId)) {
  const externalUrl = externalLinks[actualNodeId];
  if (externalUrl) {
    return Astro.redirect(externalUrl);
  }
}

// Process content - convert markdown-like syntax to HTML
function processContent(content: string): string {
  let html = content;

  // Convert **bold** to <strong>
  html = html.replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>');

  // Convert `code` to <code>
  html = html.replace(/`([^`]+)`/g, '<code>$1</code>');

  // Convert ```sql blocks to <pre><code>
  html = html.replace(/```sql\n([\s\S]*?)```/g, '<pre class="code-block"><code>$1</code></pre>');
  html = html.replace(/```\n([\s\S]*?)```/g, '<pre class="code-block"><code>$1</code></pre>');

  // Convert bullet points
  html = html.replace(/^• (.+)$/gm, '<li>$1</li>');
  html = html.replace(/(<li>.*<\/li>\n?)+/g, '<ul class="bullet-list">$&</ul>');

  // Convert numbered lists
  html = html.replace(/^\d+\. (.+)$/gm, '<li>$1</li>');

  // Convert tables (simple markdown tables)
  const tableRegex = /\|(.+)\|\n\|[-|]+\|\n((?:\|.+\|\n?)+)/g;
  html = html.replace(tableRegex, (match, header, body) => {
    const headerCells = header.split('|').filter((c: string) => c.trim()).map((c: string) => `<th>${c.trim()}</th>`).join('');
    const rows = body.trim().split('\n').map((row: string) => {
      const cells = row.split('|').filter((c: string) => c.trim()).map((c: string) => `<td>${c.trim()}</td>`).join('');
      return `<tr>${cells}</tr>`;
    }).join('');
    return `<table class="content-table"><thead><tr>${headerCells}</tr></thead><tbody>${rows}</tbody></table>`;
  });

  // Convert paragraphs (double newlines)
  html = html.split('\n\n').map(p => {
    // Don't wrap if already wrapped in block elements
    if (p.startsWith('<ul') || p.startsWith('<ol') || p.startsWith('<pre') || p.startsWith('<table')) {
      return p;
    }
    return `<p>${p}</p>`;
  }).join('\n');

  // Clean up single newlines within paragraphs
  html = html.replace(/<p>([^<]*)<\/p>/g, (match, content) => {
    return `<p>${content.replace(/\n/g, '<br>')}</p>`;
  });

  return html;
}

const processedContent = processContent(node.content);

// Build the option URLs
const optionUrls = node.options.map(opt => {
  if (isExternalNode(opt.target)) {
    return externalLinks[opt.target] || '#';
  }
  return opt.target === 'home' ? '/discover' : `/discover/${opt.target}`;
});
---

<Layout
  title={`${node.title} - AnswerLayer`}
  description="Discover AnswerLayer - a generative semantic layer for databases"
>
  <div class="discover-page crt-screen">
    <div class="container mx-auto px-6 py-12 md:py-20" style="max-width: 48rem;">

      <div class="discover-card crt-glow">
        <!-- Title -->
        <div class="title-box">
          <h1 class="discover-title crt-text">{node.title}</h1>
        </div>

        <!-- Content -->
        <div class="discover-content crt-text" set:html={processedContent} />

        <!-- Options -->
        {node.options.length > 0 && (
          <div class="discover-options">
            {node.options.map((option, index) => {
              const isExternal = isExternalNode(option.target);
              const url = optionUrls[index];
              const isBack = option.label === 'Back';

              return (
                <a
                  href={url}
                  class:list={[
                    'discover-option',
                    'crt-text',
                    { 'option-back': isBack },
                    { 'option-external': isExternal }
                  ]}
                  target={isExternal && url.startsWith('http') ? '_blank' : undefined}
                  rel={isExternal && url.startsWith('http') ? 'noopener' : undefined}
                >
                  {option.label}
                  {isExternal && url.startsWith('http') && (
                    <span class="external-indicator">↗</span>
                  )}
                </a>
              );
            })}
          </div>
        )}
      </div>

      <!-- Breadcrumb hint -->
      <div class="discover-hint crt-text">
        <span class="hint-text">Use the header to navigate elsewhere, or explore above.</span>
      </div>

    </div>
  </div>
</Layout>

<style>
  .discover-page {
    min-height: calc(100vh - 160px);
    display: flex;
    align-items: flex-start;
    padding-top: 2rem;
  }

  @media (min-height: 700px) {
    .discover-page {
      align-items: center;
      padding-top: 0;
    }
  }

  .discover-card {
    background: transparent;
    border: 2px solid var(--color-navy-900);
    position: relative;
  }

  .discover-card::before {
    content: "";
    position: absolute;
    inset: -6px;
    border: 1px solid var(--color-navy-300);
    pointer-events: none;
  }

  .title-box {
    border-bottom: 2px solid var(--color-navy-900);
    padding: 1.25rem 1.5rem;
    background: transparent;
  }

  .discover-title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-navy-900);
    margin: 0;
    line-height: 1.3;
  }

  @media (min-width: 640px) {
    .discover-title {
      font-size: 1.75rem;
    }
  }

  .discover-content {
    padding: 1.5rem;
    font-family: 'IBM Plex Sans', system-ui, sans-serif;
    font-size: 1rem;
    color: #374151;
    line-height: 1.75;
  }

  .discover-content :global(p) {
    margin-bottom: 1rem;
  }

  .discover-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .discover-content :global(strong) {
    color: var(--color-navy-900);
    font-weight: 600;
  }

  .discover-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    background: var(--color-navy-100);
    border: 1px solid var(--color-navy-300);
    padding: 0.125rem 0.375rem;
    color: var(--color-navy-900);
  }

  .discover-content :global(.code-block) {
    background: var(--color-navy-900);
    color: var(--color-navy-100);
    padding: 1rem;
    margin: 1rem 0;
    overflow-x: auto;
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    line-height: 1.6;
    border: 2px solid var(--color-navy-800);
  }

  .discover-content :global(.code-block code) {
    background: transparent;
    border: none;
    padding: 0;
    color: inherit;
    font-size: inherit;
  }

  .discover-content :global(.bullet-list) {
    list-style: none;
    padding: 0;
    margin: 1rem 0;
  }

  .discover-content :global(.bullet-list li) {
    padding-left: 1.25rem;
    margin-bottom: 0.5rem;
    position: relative;
  }

  .discover-content :global(.bullet-list li::before) {
    content: "—";
    position: absolute;
    left: 0;
    color: var(--color-navy-500);
  }

  .discover-content :global(.content-table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
    font-size: 0.875rem;
  }

  .discover-content :global(.content-table th),
  .discover-content :global(.content-table td) {
    border: 1px solid var(--color-navy-300);
    padding: 0.5rem 0.75rem;
    text-align: left;
  }

  .discover-content :global(.content-table th) {
    background: var(--color-navy-100);
    font-weight: 600;
    color: var(--color-navy-900);
  }

  .discover-options {
    border-top: 2px solid var(--color-navy-900);
    padding: 1rem 1.5rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .discover-option {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-navy-900);
    background: transparent;
    border: 2px solid var(--color-navy-900);
    padding: 0.5rem 1rem;
    text-decoration: none;
    transition: all 0.15s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
  }

  .discover-option:hover {
    background: var(--color-navy-900);
    color: var(--color-background);
    text-decoration: none;
  }

  .option-back {
    border-color: var(--color-navy-400);
    color: var(--color-navy-600);
  }

  .option-back:hover {
    background: var(--color-navy-400);
    border-color: var(--color-navy-400);
    color: var(--color-background);
  }

  .option-external .external-indicator {
    font-size: 0.75rem;
    opacity: 0.7;
  }

  .discover-hint {
    margin-top: 4rem;
    text-align: center;
  }

  .hint-text {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-navy-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
