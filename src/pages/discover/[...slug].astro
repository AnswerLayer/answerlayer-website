---
/**
 * Discovery Wizard - Dynamic Route
 *
 * Handles all /discover/* routes, rendering content from the discover collection.
 * External nodes redirect to their destinations.
 */
import Layout from '../../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';

// Generate static paths for all non-external nodes
export async function getStaticPaths() {
  const allNodes = await getCollection('discover');

  // Filter out external nodes (they redirect, don't need pages)
  const pageNodes = allNodes.filter(node => !node.data.external);

  return pageNodes.map((node) => ({
    // Use slug (without .md extension) for URL paths
    params: { slug: node.slug === 'home' ? undefined : node.slug },
    props: { nodeId: node.slug }
  }));
}

interface Props {
  nodeId: string;
}

const { nodeId } = Astro.props;
const slug = Astro.params.slug;

// Determine the actual node ID
const actualNodeId = slug || 'home';
const entry = await getEntry('discover', actualNodeId);

// Handle missing nodes
if (!entry) {
  return Astro.redirect('/discover');
}

// Handle external redirects (shouldn't hit this since they're filtered from paths,
// but keep as safety for direct URL access)
if (entry.data.external && entry.data.externalUrl) {
  return Astro.redirect(entry.data.externalUrl);
}

// Render the markdown content
const { Content } = await entry.render();

// Build the option URLs with external URL lookups
async function getOptionUrl(targetId: string): Promise<string> {
  const targetEntry = await getEntry('discover', targetId);
  if (targetEntry?.data.external && targetEntry.data.externalUrl) {
    return targetEntry.data.externalUrl;
  }
  return targetId === 'home' ? '/' : `/discover/${targetId}`;
}

// Pre-compute option URLs
const optionData = await Promise.all(
  entry.data.options.map(async (opt) => {
    const targetEntry = await getEntry('discover', opt.target);
    const isExternal = targetEntry?.data.external ?? false;
    const url = await getOptionUrl(opt.target);

    return {
      label: opt.label,
      target: opt.target,
      url,
      isExternal,
      isBack: opt.label === 'Back'
    };
  })
);
---

<Layout
  title={`${entry.data.title} - AnswerLayer`}
  description="Discover AnswerLayer - a generative semantic layer for databases"
>
  <div class="discover-page crt-screen">
    <div class="container mx-auto px-6 py-12 md:py-20" style="max-width: 48rem;">

      <div class="discover-card crt-glow">
        <!-- Title -->
        <div class="title-box">
          <h1 class="discover-title crt-text">{entry.data.title}</h1>
        </div>

        <!-- Content -->
        <div class="discover-content crt-text">
          <Content />
        </div>

        <!-- Options -->
        {optionData.length > 0 && (
          <div class="discover-options">
            {optionData.map((option) => (
              <a
                href={option.url}
                class:list={[
                  'discover-option',
                  'crt-text',
                  { 'option-back': option.isBack },
                  { 'option-external': option.isExternal }
                ]}
                target={option.isExternal && option.url.startsWith('http') ? '_blank' : undefined}
                rel={option.isExternal && option.url.startsWith('http') ? 'noopener' : undefined}
              >
                {option.label}
                {option.isExternal && option.url.startsWith('http') && (
                  <span class="external-indicator">↗</span>
                )}
              </a>
            ))}
          </div>
        )}
      </div>

      <!-- Breadcrumb hint -->
      <div class="discover-hint crt-text">
        <span class="hint-text">Use the header to navigate elsewhere, or explore above.</span>
      </div>

    </div>
  </div>
</Layout>

<style>
  .discover-page {
    min-height: calc(100vh - 160px);
    display: flex;
    align-items: flex-start;
  }

  @media (min-height: 700px) {
    .discover-page {
      align-items: center;
      padding-top: 0;
    }
  }

  .discover-card {
    background: transparent;
    border: 2px solid var(--color-navy-900);
    position: relative;
  }

  .discover-card::before {
    content: "";
    position: absolute;
    inset: -6px;
    border: 1px solid var(--color-navy-300);
    pointer-events: none;
  }

  .title-box {
    border-bottom: 2px solid var(--color-navy-900);
    padding: 1.25rem 1.5rem;
    background: transparent;
  }

  .discover-title {
    font-family: 'MS Sans Serif', 'Microsoft Sans Serif', Tahoma, sans-serif;
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--color-navy-900);
    margin: 0;
    line-height: 1.3;
  }

  @media (min-width: 640px) {
    .discover-title {
      font-size: 1.75rem;
    }
  }

  .discover-content {
    padding: 1.5rem;
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 200;
    color: #374151;
    line-height: 1.75;
  }

  .discover-content :global(p) {
    margin-bottom: 1rem;
  }

  .discover-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .discover-content :global(strong) {
    color: var(--color-navy-900);
    font-weight: 600;
  }

  .discover-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    background: var(--color-navy-100);
    border: 1px solid var(--color-navy-300);
    padding: 0.125rem 0.375rem;
    color: var(--color-navy-900);
  }

  .discover-content :global(pre) {
    background: var(--color-navy-900);
    color: var(--color-navy-100);
    padding: 1rem;
    margin: 1rem 0;
    overflow-x: auto;
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    line-height: 1.6;
    border: 2px solid var(--color-navy-800);
  }

  .discover-content :global(pre code) {
    background: transparent;
    border: none;
    padding: 0;
    color: inherit;
    font-size: inherit;
  }

  .discover-content :global(ul) {
    list-style: none;
    padding: 0;
    margin: 1rem 0;
  }

  .discover-content :global(ul li) {
    padding-left: 1.25rem;
    margin-bottom: 0.5rem;
    position: relative;
  }

  .discover-content :global(ul li::before) {
    content: "—";
    position: absolute;
    left: 0;
    color: var(--color-navy-500);
  }

  .discover-content :global(ol) {
    padding-left: 1.5rem;
    margin: 1rem 0;
  }

  .discover-content :global(ol li) {
    margin-bottom: 0.5rem;
  }

  .discover-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
    font-size: 0.875rem;
  }

  .discover-content :global(th),
  .discover-content :global(td) {
    border: 1px solid var(--color-navy-300);
    padding: 0.5rem 0.75rem;
    text-align: left;
  }

  .discover-content :global(th) {
    background: var(--color-navy-100);
    font-weight: 600;
    color: var(--color-navy-900);
  }

  .discover-options {
    border-top: 2px solid var(--color-navy-900);
    padding: 1rem 1.5rem;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.75rem;
  }

  @media (max-width: 640px) {
    .discover-options {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .discover-option {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-navy-900);
    background: transparent;
    border: 2px solid var(--color-navy-900);
    padding: 0.5rem 1rem;
    text-decoration: none;
    transition: all 0.15s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    text-align: center;
  }

  .discover-option:hover {
    background: var(--color-navy-900);
    color: var(--color-background);
    text-decoration: none;
  }

  .option-back {
    border-color: var(--color-navy-400);
    color: var(--color-navy-600);
  }

  .option-back:hover {
    background: var(--color-navy-400);
    border-color: var(--color-navy-400);
    color: var(--color-background);
  }

  .option-external .external-indicator {
    font-size: 0.75rem;
    opacity: 0.7;
  }

  .discover-hint {
    margin-top: 4rem;
    text-align: center;
  }

  .hint-text {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-navy-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
