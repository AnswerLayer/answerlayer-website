---
/**
 * Contact Page
 *
 * Grid of cards for getting in touch.
 * Consistent styling with double-border cards.
 */
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Contact - AnswerLayer"
  description="Get in touch with the AnswerLayer team"
>
  <div class="crt-screen">
    <div class="container mx-auto px-6 py-12 md:py-20">

      <!-- Page Header -->
      <div class="page-header">
        <h1 class="page-title crt-text">Contact</h1>
        <p class="page-subtitle crt-text">Get in touch</p>
      </div>

      <!-- Card Grid -->
      <div class="card-grid">

        <a href="mailto:josh@getanswerlayer.com" class="topic-card">
          <h2 class="card-title crt-text">Email</h2>
          <p class="card-description crt-text">josh@getanswerlayer.com</p>
        </a>

        <a href="https://calendly.com/josh-getanswerlayer/30min" target="_blank" rel="noopener" class="topic-card">
          <h2 class="card-title crt-text">Schedule a Call ↗</h2>
          <p class="card-description crt-text">Book a 30-minute conversation to discuss your needs.</p>
        </a>

        <a href="https://www.linkedin.com/company/answerlayer" target="_blank" rel="noopener" class="topic-card">
          <h2 class="card-title crt-text">LinkedIn ↗</h2>
          <p class="card-description crt-text">Follow AnswerLayer for updates and announcements.</p>
        </a>

        <a href="/team" class="topic-card">
          <h2 class="card-title crt-text">Team</h2>
          <p class="card-description crt-text">Meet the people building AnswerLayer.</p>
        </a>

      </div>

    </div>
  </div>
</Layout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .page-title {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 500;
    color: var(--color-navy-900);
    margin: 0 0 0.5rem 0;
  }

  .page-subtitle {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-navy-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .card-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .card-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .topic-card {
    display: block;
    background: transparent;
    border: 2px solid var(--color-navy-900);
    padding: 1.5rem;
    text-decoration: none;
    transition: all 0.15s ease;
    position: relative;
  }

  .topic-card::before {
    content: "";
    position: absolute;
    inset: -6px;
    border: 1px solid var(--color-navy-300);
    pointer-events: none;
  }

  .topic-card:hover {
    border-color: var(--color-navy-600);
    text-decoration: none;
  }

  .card-title {
    font-family: 'MS Sans Serif', 'Microsoft Sans Serif', Tahoma, sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-navy-900);
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .card-description {
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 400;
    color: var(--color-navy-700);
    line-height: 1.5;
    margin: 0;
  }
</style>
