---
import MarketingLayout from '../layouts/MarketingLayout.astro';

const repos = [
  {
    name: 'sniffbench',
    url: 'https://github.com/AnswerLayer/sniffbench',
    description: 'Benchmarking tool for evaluating database schema inference and query generation capabilities.',
  },
  {
    name: 'semiosis',
    url: 'https://github.com/AnswerLayer/semiosis',
    description: 'Semantic layer framework for building intelligent data interfaces.',
  },
];
---

<MarketingLayout
  title="Open Source - AnswerLayer"
  description="Explore our open source repositories. Join us in building the future of intelligent data access."
  showBreadcrumbs={true}
>
  <!-- Hero Section -->
  <section class="pt-20 pb-16 bg-gradient-to-b from-navy-50 to-gray-50">
    <div class="container-custom text-center">
      <div class="inline-flex items-center gap-2 bg-navy-100 text-navy-800 px-4 py-2 rounded-full text-sm font-medium mb-6">
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        Open Source
      </div>
      <h1 class="text-4xl md:text-5xl font-serif font-light mb-6 text-navy-900">
        Building in the <span class="italic">Open</span>
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto font-light">
        We believe in the power of open source. Explore our public repositories
        and join us in building the future of intelligent data access.
      </p>
    </div>
  </section>

  <!-- Repositories Section -->
  <section class="py-20 bg-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-serif font-light mb-4 text-navy-900">
          Our Repositories
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Check out our open source projects on GitHub.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {repos.map((repo) => (
          <a
            href={repo.url}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-white rounded-xl p-6 shadow-lg border border-gray-200 hover:shadow-xl transition-shadow group"
          >
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center gap-3">
                <svg class="h-6 w-6 text-navy-600" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                <h3 class="text-xl font-medium text-navy-900">
                  {repo.name}
                </h3>
              </div>
              <svg class="h-5 w-5 text-gray-400 group-hover:text-navy-600 transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                <polyline points="15 3 21 3 21 9"></polyline>
                <line x1="10" y1="14" x2="21" y2="3"></line>
              </svg>
            </div>
            <p class="text-gray-600 font-light">
              {repo.description}
            </p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-navy-900 text-white">
    <div class="container-custom text-center">
      <h2 class="text-3xl font-serif font-light mb-4">
        Want to Contribute?
      </h2>
      <p class="text-navy-200 mb-8 max-w-2xl mx-auto">
        We welcome contributions from the community. Check out our repositories and get involved.
      </p>
      <a
        href="https://github.com/orgs/AnswerLayer/repositories"
        target="_blank"
        rel="noopener noreferrer"
        class="btn bg-white text-navy-900 hover:bg-gray-100 btn-lg inline-flex items-center gap-2"
      >
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View on GitHub
      </a>
    </div>
  </section>
</MarketingLayout>
