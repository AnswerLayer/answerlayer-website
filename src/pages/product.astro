---
import MarketingLayout from '../layouts/MarketingLayout.astro';

const appUrl = 'https://app.getanswerlayer.com';

const features = [
  {
    title: 'Natural Language Queries',
    description: 'Ask questions in plain English. Our AI translates your intent into precise database queries.',
    icon: 'chat'
  },
  {
    title: 'Connect Any Database',
    description: 'PostgreSQL, BigQuery, Snowflake, AWS Athena, and more. Your data, wherever it lives.',
    icon: 'database'
  },
  {
    title: 'Semantic Layer',
    description: 'Define business metrics once. Ensure consistent definitions across every query and user.',
    icon: 'layers'
  },
  {
    title: 'PII Protection',
    description: 'Automatically detect and filter sensitive data. Stay compliant without sacrificing insights.',
    icon: 'shield'
  },
  {
    title: 'Beautiful Visualizations',
    description: 'Charts, graphs, and dashboards generated automatically from your query results.',
    icon: 'chart'
  },
  {
    title: 'API for AI Agents',
    description: 'Embed analytics in your products. RESTful endpoints designed for AI agent integration.',
    icon: 'code'
  }
];
---

<MarketingLayout
  title="Product - AnswerLayer"
  description="AnswerLayer product features - Natural language queries, database connections, semantic layer, PII protection, and more."
  showBreadcrumbs={true}
>
  <!-- Hero Section -->
  <section class="pt-20 pb-16 bg-gradient-to-b from-navy-50 to-gray-50">
    <div class="container-custom text-center">
      <h1 class="text-4xl md:text-5xl font-serif font-light mb-6 text-navy-900">
        The Complete <span class="italic">Analytics</span> Platform
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto font-light">
        Everything you need to unlock insights from your data. Natural language queries, powerful visualizations, and enterprise-grade security.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={`${appUrl}/sign-up`} class="btn btn-primary btn-lg">
          Start Free
          <svg class="ml-2 h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-20 bg-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-light mb-4 text-navy-900">
          Built for Modern Data Teams
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Powerful features that make data accessible to everyone in your organization.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="feature-card">
            <div class="w-12 h-12 bg-navy-100 rounded-xl flex items-center justify-center mb-4">
              <svg class="h-6 w-6 text-navy-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                {feature.icon === 'chat' && (
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                )}
                {feature.icon === 'database' && (
                  <>
                    <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                    <path d="M3 5V19A9 3 0 0 0 21 19V5"></path>
                    <path d="M3 12A9 3 0 0 0 21 12"></path>
                  </>
                )}
                {feature.icon === 'layers' && (
                  <>
                    <polygon points="12 2 2 7 12 12 22 7 12 2"></polygon>
                    <polyline points="2 17 12 22 22 17"></polyline>
                    <polyline points="2 12 12 17 22 12"></polyline>
                  </>
                )}
                {feature.icon === 'shield' && (
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                )}
                {feature.icon === 'chart' && (
                  <>
                    <line x1="18" y1="20" x2="18" y2="10"></line>
                    <line x1="12" y1="20" x2="12" y2="4"></line>
                    <line x1="6" y1="20" x2="6" y2="14"></line>
                  </>
                )}
                {feature.icon === 'code' && (
                  <>
                    <polyline points="16 18 22 12 16 6"></polyline>
                    <polyline points="8 6 2 12 8 18"></polyline>
                  </>
                )}
              </svg>
            </div>
            <h3 class="text-xl font-serif font-medium mb-2 text-navy-900">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-navy-900 text-white">
    <div class="container-custom text-center">
      <h2 class="text-3xl font-serif font-light mb-4">
        Ready to Transform Your Data?
      </h2>
      <p class="text-navy-200 mb-8 max-w-2xl mx-auto">
        Join teams already using AnswerLayer to unlock insights from their data.
      </p>
      <a href={`${appUrl}/sign-up`} class="btn bg-white text-navy-900 hover:bg-gray-100 btn-lg">
        Get Started Free
        <svg class="ml-2 h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </section>
</MarketingLayout>
