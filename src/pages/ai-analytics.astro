---
import MarketingLayout from '../layouts/MarketingLayout.astro';

const appUrl = 'https://app.getanswerlayer.com';
---

<MarketingLayout
  title="AI-Powered Analytics - AnswerLayer"
  description="Transform natural language into precise database queries. AI-powered analytics that understands your business."
  showBreadcrumbs={true}
>
  <!-- Hero Section -->
  <section class="pt-20 pb-16 bg-gradient-to-b from-navy-50 to-gray-50">
    <div class="container-custom text-center">
      <h1 class="text-4xl md:text-5xl font-serif font-light mb-6 text-navy-900">
        AI-Powered <span class="italic">Analytics</span>
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto font-light">
        Ask questions in plain English. Get answers in seconds. Our AI translates your intent into precise database queries.
      </p>
      <a href={`${appUrl}/sign-up`} class="btn btn-primary btn-lg">
        Try It Free
        <svg class="ml-2 h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-20 bg-white">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-serif font-light mb-12 text-center text-navy-900">
        How It Works
      </h2>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-navy-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-serif text-navy-600">1</span>
          </div>
          <h3 class="text-xl font-serif mb-2 text-navy-900">Ask a Question</h3>
          <p class="text-gray-600">Type your question in plain English. No SQL knowledge required.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-navy-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-serif text-navy-600">2</span>
          </div>
          <h3 class="text-xl font-serif mb-2 text-navy-900">AI Translates</h3>
          <p class="text-gray-600">Our AI understands your intent and generates optimized database queries.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-navy-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-serif text-navy-600">3</span>
          </div>
          <h3 class="text-xl font-serif mb-2 text-navy-900">Get Insights</h3>
          <p class="text-gray-600">Receive answers with beautiful visualizations, automatically generated.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-20 bg-gray-50">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-serif font-light mb-6 text-navy-900">
            Intelligence That Understands Context
          </h2>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="h-6 w-6 text-navy-600 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Understands business terminology and domain-specific language</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="h-6 w-6 text-navy-600 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Learns from your semantic layer definitions</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="h-6 w-6 text-navy-600 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Handles complex multi-table joins automatically</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="h-6 w-6 text-navy-600 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Improves accuracy over time with usage</span>
            </li>
          </ul>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <div class="space-y-4">
            <div class="bg-gray-50 rounded-lg p-4">
              <p class="text-sm text-gray-500 mb-2">You ask:</p>
              <p class="text-navy-900 font-medium">"What was our revenue growth by region last quarter?"</p>
            </div>
            <div class="flex justify-center">
              <svg class="h-6 w-6 text-navy-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <polyline points="19 12 12 19 5 12"></polyline>
              </svg>
            </div>
            <div class="bg-navy-50 rounded-lg p-4">
              <p class="text-sm text-gray-500 mb-2">AI generates:</p>
              <code class="text-sm text-navy-700">SELECT region, SUM(revenue), ...</code>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-navy-900 text-white">
    <div class="container-custom text-center">
      <h2 class="text-3xl font-serif font-light mb-4">
        Experience AI-Powered Analytics
      </h2>
      <p class="text-navy-200 mb-8 max-w-2xl mx-auto">
        Start asking questions and getting answers in minutes.
      </p>
      <a href={`${appUrl}/sign-up`} class="btn bg-white text-navy-900 hover:bg-gray-100 btn-lg">
        Get Started Free
      </a>
    </div>
  </section>
</MarketingLayout>
