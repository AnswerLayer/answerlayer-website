---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Pricing - AnswerLayer"
  description="Simple pricing for AnswerLayer. Start free, upgrade when you need more."
>
  <section class="section">
    <div class="container container-narrow">
      <h1 class="mb-md">Pricing</h1>
      <p class="text-muted mb-2xl">Start free. Upgrade when you need more.</p>

      <div class="pricing-grid">
        <!-- Free -->
        <div class="pricing-card">
          <div class="pricing-name">Free</div>
          <div class="pricing-price">$0<span>/month</span></div>
          <ul class="pricing-features">
            <li>100 queries/month</li>
            <li>1 database connection</li>
            <li>Natural language queries</li>
            <li>Basic visualizations</li>
            <li>Community support</li>
          </ul>
          <a href="https://app.getanswerlayer.com/sign-up" class="btn btn-secondary" style="width: 100%;">Get Started</a>
        </div>

        <!-- Pro -->
        <div class="pricing-card featured">
          <div class="pricing-name">Pro</div>
          <div class="pricing-price">$99<span>/month</span></div>
          <ul class="pricing-features">
            <li>Unlimited queries</li>
            <li>Unlimited connections</li>
            <li>Semantic layer</li>
            <li>PII detection &amp; filtering</li>
            <li>Priority support</li>
          </ul>
          <a href="https://app.getanswerlayer.com/sign-up" class="btn btn-primary" style="width: 100%;">Start Free Trial</a>
        </div>

        <!-- Enterprise -->
        <div class="pricing-card">
          <div class="pricing-name">Enterprise</div>
          <div class="pricing-price">Custom</div>
          <ul class="pricing-features">
            <li>Everything in Pro</li>
            <li>VPC deployment</li>
            <li>SSO / SAML</li>
            <li>Audit logging</li>
            <li>Dedicated support</li>
          </ul>
          <a href="mailto:josh@getanswerlayer.com?subject=Enterprise Inquiry" class="btn btn-secondary" style="width: 100%;">Contact Sales</a>
        </div>
      </div>
    </div>
  </section>

  <section class="section-sm" style="border-top: 1px solid var(--border);">
    <div class="container container-narrow text-center">
      <h2 class="mb-md">Questions?</h2>
      <p class="text-muted">
        Email <a href="mailto:josh@getanswerlayer.com">josh@getanswerlayer.com</a> for custom pricing or technical questions.
      </p>
    </div>
  </section>
</Layout>
