---
/**
 * Home Page
 * Renders content from the discover collection's "home" node
 * Minimal approach with W95FA body text, technical card, CRT effects
 */
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

// Fetch the home node from the discover collection
const homeEntry = await getEntry('discover', 'home');
if (!homeEntry) {
  throw new Error('Missing home.md in discover collection');
}

const { Content } = await homeEntry.render();

// Build option URLs (same logic as [...slug].astro)
async function getOptionUrl(targetId: string): Promise<string> {
  const targetEntry = await getEntry('discover', targetId);
  if (targetEntry?.data.external && targetEntry.data.externalUrl) {
    return targetEntry.data.externalUrl;
  }
  return targetId === 'home' ? '/' : `/discover/${targetId}`;
}

const optionData = await Promise.all(
  homeEntry.data.options.map(async (opt) => {
    const url = await getOptionUrl(opt.target);
    return { label: opt.label, url };
  })
);
---

<Layout title="AnswerLayer">
  <div class="crt-screen hero-section">
    <div class="container mx-auto px-6" style="max-width: 48rem;">

      <div class="technical-card crt-glow">
        <div class="title-box">
          <h1 class="home-title crt-text">
            {homeEntry.data.title}
          </h1>
        </div>

        <div class="body-content crt-text">
          <Content />
        </div>

        <div class="continue-section">
          {optionData.map((opt) => (
            <a href={opt.url} class="continue-button crt-text">{opt.label}</a>
          ))}
        </div>
      </div>

    </div>
  </div>

  <style>
    .hero-section {
      min-height: calc(100vh - 80px);
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .title-box {
      border: none;
      border-bottom: 2px solid var(--color-navy-900);
      padding: 1rem 2.5rem;
      margin: -2rem -2.5rem 1.5rem -2.5rem;
      background: transparent;
    }
    .home-title {
      font-family: 'MS Sans Serif', 'Microsoft Sans Serif', Tahoma, sans-serif;
      font-size: 2rem;
      font-weight: 400;
      text-transform: none;
      margin: 0;
      color: #151c3f;
    }
    @media (min-width: 640px) {
      .home-title {
        white-space: nowrap;
      }
    }
    .body-content {
      font-family: var(--font-body);
      font-size: 1.0625rem;
      font-weight: 200;
      color: #374151;
      line-height: 1.75;
      margin-bottom: 1.5rem;
    }
    .body-content :global(p) {
      margin-bottom: 1.25rem;
    }
    .body-content :global(p:last-child) {
      margin-bottom: 0;
    }
    .technical-card {
      background: transparent;
      border: 2px solid var(--color-navy-900);
      padding: 2rem 2.5rem;
      margin-bottom: 2rem;
      position: relative;
    }
    .technical-card::before {
      content: "";
      position: absolute;
      inset: -6px;
      border: 1px solid var(--color-navy-300);
      pointer-events: none;
    }
    .crt-link {
      font-family: var(--font-mono);
      font-size: 0.875rem;
      color: var(--color-navy-900);
      text-decoration: none;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      transition: opacity 0.2s;
    }
    .crt-link:hover {
      opacity: 0.7;
      text-decoration: underline;
    }
    .continue-section {
      border-top: 2px solid var(--color-navy-900);
      margin: 0 -2.5rem -2rem -2.5rem;
      padding: 1rem 2.5rem;
    }
    .continue-button {
      font-family: var(--font-body);
      font-size: 0.875rem;
      font-weight: 400;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--color-navy-900);
      background: transparent;
      border: 2px solid var(--color-navy-900);
      padding: 0.625rem 1.5rem;
      text-decoration: none;
      display: inline-block;
      transition: all 0.15s ease;
    }
    .continue-button:hover {
      background: var(--color-navy-900);
      color: var(--color-background);
      text-decoration: none;
    }
  </style>
</Layout>
