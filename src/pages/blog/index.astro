---
/**
 * Blog Page
 *
 * Grid of cards linking to articles and resources.
 * Consistent styling with double-border cards.
 */
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts, filter drafts in production
const posts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Sort by date, newest first
posts.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());

// Format date helper
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short' });
}
---

<Layout
  title="Blog - AnswerLayer"
  description="Technical insights on semantic layers, data analytics, and AI-powered infrastructure"
>
  <div class="crt-screen">
    <div class="container mx-auto px-6 py-12 md:py-20">

      <!-- Page Header -->
      <div class="page-header">
        <h1 class="page-title crt-text">Blog</h1>
        <p class="page-subtitle crt-text">Technical insights and resources</p>
      </div>

      <!-- Card Grid -->
      <div class="card-grid">

        {posts.map((post) => (
          <a href={`/blog/${post.slug}`} class="topic-card">
            <div class="card-header">
              <h2 class="card-title crt-text">{post.data.title}</h2>
              {post.data.draft && <span class="draft-tag">Draft</span>}
            </div>
            <p class="card-meta crt-text">{post.data.author} · {formatDate(post.data.publishedAt)}</p>
            <p class="card-description crt-text">{post.data.description}</p>
          </a>
        ))}

        <a href="https://jharris1679.github.io/inference-economics/" target="_blank" rel="noopener" class="topic-card">
          <h2 class="card-title crt-text">Inference Economics ↗</h2>
          <p class="card-meta crt-text">Josh Harris · Jan 2026</p>
          <p class="card-description crt-text">Compare LLM inference costs across local hardware, cloud GPU rentals, and API providers. Interactive analysis with real benchmark data.</p>
        </a>

      </div>

    </div>
  </div>
</Layout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .page-title {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 500;
    color: var(--color-navy-900);
    margin: 0 0 0.5rem 0;
  }

  .page-subtitle {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-navy-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .card-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .card-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .card-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .topic-card {
    display: block;
    background: transparent;
    border: 2px solid var(--color-navy-900);
    padding: 1.5rem;
    text-decoration: none;
    transition: all 0.15s ease;
    position: relative;
  }

  .topic-card::before {
    content: "";
    position: absolute;
    inset: -6px;
    border: 1px solid var(--color-navy-300);
    pointer-events: none;
  }

  .topic-card:hover {
    border-color: var(--color-navy-600);
    text-decoration: none;
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .card-title {
    font-family: 'MS Sans Serif', 'Microsoft Sans Serif', Tahoma, sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-navy-900);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .draft-tag {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.125rem 0.375rem;
    color: #b45309;
    border: 1px solid #b45309;
    background: #fef3c7;
    flex-shrink: 0;
  }

  .card-meta {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-navy-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 0.75rem 0;
  }

  .card-description {
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 400;
    color: var(--color-navy-700);
    line-height: 1.5;
    margin: 0;
  }
</style>
