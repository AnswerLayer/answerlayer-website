---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Generative semantic layer for analytics agents. Your data stays in your cloud.'
} = Astro.props;
---

