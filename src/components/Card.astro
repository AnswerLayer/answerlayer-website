---
/**
 * Card Component
 * Per ANS-486: variant="technical" is preferred for blueprint feel
 * Can add class="crt-glow" for subtle depth effect
 */
interface Props {
  variant?: 'default' | 'bordered' | 'technical';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  variant = 'default',
  padding = 'md',
  class: className = ''
} = Astro.props;

const baseStyles = 'bg-white';

const variants = {
  default: 'border border-gray-300',
  bordered: 'border-2 border-navy-900',
  technical: 'border-2 border-navy-900 technical-border'
};

const paddings = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const classes = `${baseStyles} ${variants[variant]} ${paddings[padding]} ${className}`;
---

<div class={classes}>
  <slot />
</div>
